@model OrderingFood.Models.User

@{
    ViewData["Title"] = "Tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}

<h1>Thay đổi mật khẩu</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePasswordForUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="UserId" />

            <div class="form-group  mb-4">
                <label asp-for="Password"  class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group  mb-4">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" name="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ConfPassword" class="control-label"></label>
                <input asp-for="ConfPassword" name="ConfPassword" class="form-control" />
                <span asp-validation-for="ConfPassword" class="text-danger"></span>
            </div>

            @if (ViewData["Error"] != null)
            {
                <span class="text-danger">@ViewData["Error"]</span>
            }

            <div class="form-group  mb-4">
                <input type="submit" value="Xác nhận" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}