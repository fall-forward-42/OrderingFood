@model IEnumerable<OrderingFood.Models.User>

@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
        
}

<h1 class="text-uppercase font-weight-bold">Danh sách các khách hàng</h1>

<p>
    <a asp-action="Create">Tạo mới thông tin khách hàng</a>
</p>
  

<form asp-action="Index" >
    <div class="input-group ">
        <div class="form-outline col-lg-4 col-sm-8">
            <input type="search" id="inputToString" name="inputToString" class="form-control" placeholder="Tìm kiếm"/>
        </div>
        <button type="submit" class="btn btn-primary ">
            <i class="ti ti-search fs-6"></i>
        </button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeAccount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.EncodedPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeAccount)
            </td>
                <td>
                    <div class="btn btn-primary mb-2 ">
                        <a asp-action="Edit" asp-route-id="@item.UserId" class="text-light">Chỉnh</a>
                    </div>
                    <div class="btn btn-primary  mb-2 bg-info">
                        <a asp-action="Details" asp-route-id="@item.UserId" class="text-light">Xem</a>
                    </div>
                    <div class="btn btn-primary  mb-2 bg-danger">
                        <a asp-action="Delete" asp-route-id="@item.UserId" class="text-light">Xóa</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}