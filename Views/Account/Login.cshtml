@{
    ViewData["Title"] = "Đăng nhập";
}
<section class=" p-5" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: auto;
        ">
    <div class="card shadow-5-strong" style="
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
        <div class="card-body py-2 px-md-2">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-5 text-center">Đăng nhập</h2>
                    <form asp-action="Login">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form3Example3">Tên đăng nhập</label>
                            <input type="email" id="form3Example3" class="form-control" />
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form3Example4">Mật khẩu</label>
                            <input type="password" id="form3Example4" class="form-control"/>
                        </div>
                        <p class="small mb-5 pb-lg-2"><a class="text-black-50" href="#!">Quên mật khẩu ?</a></p>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">
                            Đăng nhập
                        </button>

                        <div>
                            <p class="mb-0 text-center">
                                Chưa có tài khoản ? <a asp-area="" asp-controller="Account" asp-action="Register" class="text-black-50  fw-bold">Đăng ký ngay !</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>
